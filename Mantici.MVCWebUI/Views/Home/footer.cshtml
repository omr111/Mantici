@using Mantici.Entities.Models
@model Mantici.Entities.Models.CompanyInformation
<!-- Footer -->
<footer style="background-color: #78b454" class="pt-5 pb-4" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-6 mt-2 mb-4">
                <h5 class="mb-4 font-weight-bold">Hakkımızda</h5>
                <p class="mb-4" style="font-size: 30px">@Model.companyName</p>
                <ul class="f-address">
                    <li>
                        <div class="row">
                            <div class="col-1"><i class="fas fa-map-marker"></i></div>
                            <div class="col-10">
                                <h6 class="font-weight-bold mb-0">Adres:</h6>
                                <p>@Model.companyAddress</p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="row">
                            <div class="col-1"><i class="far fa-envelope"></i></div>
                            <div class="col-10">
                                <small class="font-weight-bold mb-0">Görüş ve Şikayetleriniz İçin.</small>
                                <p><a href="#">@Model.email</a></p>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="row">
                            <div class="col-1"><i class="fas fa-phone-volume"></i></div>
                            <div class="col-10">
                                <h6 class="font-weight-bold mb-0">Telefon:</h6>
                                @foreach (var phone in Model.Phones)
                                {
                                    <p><a href="#">@phone.phoneNumber</a></p>
                                }
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mt-2 mb-4">
                <h5 class="mb-4 font-weight-bold">Menüler</h5>
                <ul class="f-address">
                    <li style="margin-bottom: 16px;">
                        <div class="row">
                            <div class="col-1"><i class="fa fa-home"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="/Home/Index">Anasayfa</a></p>

                            </div>
                        </div>
                    </li>
                    <li style="margin-bottom: 16px;">
                        <div class="row">
                            <div class="col-1"><i class="fa fa-list"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="/Menu/Index">Menü </a> </p>

                            </div>
                        </div>
                    </li>
                    <li style="margin-bottom: 16px;">
                        <div class="row">
                            <div class="col-1"><i class="fa fa-info-circle"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="/about/Index">Hakkımızda </a></p>

                            </div>
                        </div>
                    </li>
                    <li style="margin-bottom: 16px;">
                        <div class="row">
                            <div class="col-1"><i class="fa fa-code-fork"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="/branch/Index">Bayiler </a></p>

                            </div>
                        </div>
                    </li>
                    <li style="margin-bottom: 16px;">
                        <div class="row">
                            <div class="col-1"><i class="fa fa-heart"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="/contact/Index">İletişim </a></p>

                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="row">
                            <div class="col-1"><i  class="fa fa-building"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="/services/Index">Hizmetler </a></p>

                            </div>
                        </div>
                        </li>
                </ul>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mt-2 mb-4">
                <h5 class="mb-4 font-weight-bold">Son Yüklenen Ürünler</h5>
                <ul class="recent-post">
                    @foreach (Product pro in ViewBag.productToFooter)
                    {

                        <li >
                            <div>
                                <label class="mr-3" style="margin: 0;padding: 0"> <img width="40" height="40" src="@pro.coverPicturePath" /></label>
                                <span>@pro.name</span>
                            </div>
                        </li>

                    }
                   

                </ul>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6 mt-2 mb-4">
                <h5 class="mb-4 font-weight-bold">Sosyal Medya</h5>

                <ul class="social-pet mt-4">
                    <li style="margin-bottom: 30px;">
                        <div class="row">
                            <div class="col-1 socialMedia"><i style="color:#0141a2" class="fab fa-facebook-f"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="#">Anasayfa</a></p>

                            </div>
                        </div>
                    </li>
                    <li style="margin-bottom: 30px;">
                        <div class="row">
                            <div class="col-1 socialMedia"><i style="color:#57aced" class="fab fa-twitter"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="#">Anasayfa</a></p>

                            </div>
                        </div>
                    </li>
                    <li style="margin-bottom: 30px;">
                        <div class="row">
                            <div class="col-1 socialMedia"><i style="color:#dd4f43" class="fab fa-google-plus-g"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="#">Anasayfa</a></p>

                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="row">
                            <div class="col-1 "><i style="color: #6b27b2;font-size: 20px" class="fab fa-instagram"></i></div>
                            <div class="col-10">
                                <p class="mb-0"><a href="#">Anasayfa</a></p>

                            </div>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</footer>
<!-- Copyright -->
<section class="copyright">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <div class="text-center text-white">
                    &copy; @DateTime.Now.Year @Model.companyName. Tüm Hakları Saklıdır.
                </div>
                <div class="text-center text-white">
                    Bilgisayar Mühendisi: Ömer ÇETİNKAYA | 0531 365 13 56
                </div>
            </div>
        </div>
    </div>
</section>