@model Mantici.Entities.Models.CompanyInformation
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="single_about_area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xl-5 col-lg-5">
                <div class="single_about_text">
                    <h1>@Model.companyName</h1>
                    @Html.Raw(@Model.companyAbout.Substring(0,500))
                  
                </div>
            </div>
            <div class="col-xl-6 offset-xl-1 col-lg-6 offset-lg-1">
                <div class="single_about_thumb thumb_n1">
                    <img src="@Model.companyPicturePath" alt="ayha.net">
                </div>
            </div>
        </div>
    </div>
</div>
