
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Mantici.Entities.Models
@section css{
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/content/css/branchSnippetCss.css" rel="stylesheet" />
}
@model List<Mantici.Entities.Models.Branch>
    @if (Model != null)
    {

        <div class="col-md-12">
            <div class="wrapper">
                <h1 style="color: #78b454; margin-bottom: 20px;margin-top: 20px; font-family: sans-serif;font-size: 60px;">Şubelerimiz</h1>
                <div class="cols">
                    @foreach (Branch branch in Model)
                    {

                        <div class="col-md-4 colleft">
                            <div class="col" ontouchstart="this.classList.toggle('hover');">
                                <div class="container">
                                    <div class="front" style="background-image: url(@branch.BranchPicturePath)">
                                        <div class="inner">
                                            <p>@branch.BranchName</p>
                                            <span>@branch.area | @branch.city</span>
                                        </div>
                                    </div>
                                    <div class="back">
                                        <div class="inner">
                                            <div class="container">
                                                <h6 style="font-weight: 900; color:darkslategray;margin-bottom: 5px;">Email</h6>
                                                <h6 style="color:#fffff9;margin-bottom: 5px;">@branch.email</h6>
                                                <h6 style="font-weight: 900; color:darkslategray;margin-bottom: 5px;">Telefon</h6>
                                                @foreach (var phone in branch.BranchPhones)
                                                {
                                                    <h6 style="color:#fffff9;margin-bottom: 5px;">@phone.BranchPhone1</h6>
                                                }
                                                <h6 style="font-weight: 900; color:darkslategray;margin-bottom: 5px;">Adres</h6>
                                                <h6 style="color:#fffff9">@branch.BranchAdress</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }







                </div>
            </div>
        </div>
    }
    else
    {


        <div style="min-height: 500px">

            <h1>Henüz Bayi Bulunmamaktadır.</h1>
        </div>
    }