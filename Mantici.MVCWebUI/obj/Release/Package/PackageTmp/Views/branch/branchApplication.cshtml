@model Mantici.Entities.Models.BranchesApplication
@{
    ViewBag.Title = "branchApplication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="col-md-12">

        <h2 class="form-title" style="margin-top: 30px; color:#78b454;">İŞ ORTAKLIĞI SİSTEMİMİZ</h2>
        <h4  class="form-title" style="text-align: center">Güvenilir ve saygın yatırımcılara kapımız her zaman açık.</h4>
       

        <img src="~/content/img/asda.png" style="margin-left: 42%;width: 200px; height: 100px;margin-top: 20px; margin-bottom: 20px;" />

        <form method="POST" action="/branch/branchApplication">
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="form-group">

                    <label for="nameSurname"><i style="font-size: 20px; color:#78b454;" class="fa fa-user "></i> </label>
                    <input style="height: 40px; margin-bottom: 20px; " maxlength="70" type="text" class="col-md-10" name="nameSurname" id="nameSurname" placeholder="Ad Soyad..." />

                </div>
                @Html.ValidationMessageFor(m => m.nameSurname, "", new {@style = "color:red"})

                <div class="form-group">

                    <label for="email"><i style="font-size: 20px; color:#78b454;" class="fa fa-envelope "></i> </label>
                    <input style="height: 40px; margin-bottom: 20px; " maxlength="50" type="text" class="col-md-10" name="email" id="email" placeholder="Email..." />

                </div>
                @Html.ValidationMessageFor(m => m.email, "", new {@style = "color:red"})
                <div class="form-group">

                    <label for="phoneNumber"><i style="font-size: 20px; color:#78b454;" class="fa fa-phone "></i> </label>
                    <input style="height: 40px; margin-bottom: 20px; " type="text" maxlength="11" class="col-md-10" name="phoneNumber" id="phoneNumber" placeholder="phone..." />

                </div>
                @Html.ValidationMessageFor(m => m.phoneNumber, "", new {@style = "color:red"})
                <div class="form-group">

                    <label for="Address"><i style="font-size: 20px; color:#78b454;" class="fas fa-map-marker-alt"></i> </label>
                    <input style="height: 40px; margin-bottom: 20px; " type="text" class="col-md-10" id="Address" maxlength="250" name="Address" placeholder="Adres..." />

                </div>
                @Html.ValidationMessageFor(m => m.Address, "", new {@style = "color:red"})
                <i style="font-size: 20px; color:#78b454;" class="far fa-comments"></i>
                <div class="form-group">

                    <label for="message"></label>
                    <textarea cols="5" rows="7" class="col-md-10"maxlength="500" name="message" id="message" placeholder="Lütfen Mesajınızı Yazınız..."></textarea>

                </div>
                @Html.ValidationMessageFor(m => m.message, "", new {@style = "color:red"})
                <div class="form-group">

                    <input type="submit" value="Gönder" class="btn btn-success"/>

                </div>
            </div>

        </form>
        <div class="infosaveUser">
            @if (ViewData["applicationInfo"] != null)
            {
                if (ViewData["applicationInfo"].ToString()=="Başvurunuz Gönderilirken Bir Hata Oluştu Lütfen Tekrar Deneyiniz.")
                { 
                    <div class="col-sm-12">

                        <div class="alert  alert-danger alert-dismissible fade show" role="alert">
                            <span class="badge badge-pill badge-success">Hata</span> @ViewData["applicationInfo"].ToString()
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-sm-12">

                        <div class="alert  alert-success alert-dismissible fade show" role="alert">
                            <span class="badge badge-pill badge-success">Başarılı</span> @ViewData["applicationInfo"].ToString()
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>



</div>

