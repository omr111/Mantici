@using Mantici.Entities.Models
@model List<Mantici.Entities.Models.Category>

@{
    ViewBag.Title = "productAdd";
    Layout = "~/Areas/AdminPanel/Views/Shared/_adminLayout.cshtml";
}
@using(Html.BeginForm("productAdd", "product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <!-- content-->
    <div class="infosaveUser">
        @if (ViewData["productAddingError"] != null)
        {
        
            <div class="col-sm-12">

                <div class="alert  alert-danger alert-dismissible fade show" role="alert">
                    <span class="badge badge-pill badge-success">Hata</span> @ViewData["productAddingError"].ToString()
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-xs-6 col-sm-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>Ürün Giriş</strong>
                        </div>
                        <div class="card-body card-block">
                            <div class="form-group">
                                <label class=" form-control-label">Ürün Başlık</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa icofont-fast-food"></i></div>
                                    <input type="text" name="name" class="form-control">
                                </div>

                            </div>
                            <div class="form-group">
                                <label class=" form-control-label">Ürün Kısa Açıklama</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-audio-description"></i></div>
                                    <input type="text" name="caption" class="form-control">
                                </div>

                            </div>
                            <div class="form-group">
                                <label class=" form-control-label">Fiyat</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-turkish-lira"></i></div>
                                    <input type="number" name="price" class="form-control ">
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6">
                    <div class="card">
                        <div class="card-body card-block">
                            <div class="form-group">
                                <label class=" form-control-label">Ürün Kategori</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-list"></i></div>
                                    <select class="form-control" name="categoryID">
                                        <option></option>
                                        @foreach (Category category in Model)
                                        {
                                            <option value="@category.id">@category.categoryName</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class=" form-control-label">Resim</label>
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-file"></i></div>
                                    <input class="form-control" type="file" name="file">
                                </div>

                            </div>
                       
                    
                            <div class="form-group">
                               
                                <input type="submit" value="Onayla" class="btn btn-success" style="float: right"/>

                            </div>

                        </div>
                    </div>
                </div>
            </div><!--row end-->
        </div><!-- .animated -->
    </div>  
    <!-- .content -->

   
}