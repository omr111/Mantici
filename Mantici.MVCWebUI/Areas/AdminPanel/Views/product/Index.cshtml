@using Mantici.Entities.Models
@model List<Mantici.Entities.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_adminLayout.cshtml";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Ürün Listesi</strong>
                    </div>
                    <div class="card-body">
                        <div class="col-md-12" style="margin-top: 20px">
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                   
                                    <div class="pull-right">
                                        <span class="clickable filter" data-toggle="tooltip" title="Arama Yap" data-container="body">
                                            <i class="glyphicon glyphicon-filter"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    <input type="text" class="form-control" id="task-table-filter" data-action="filter" data-filters="#task-table" placeholder="Arama..." />
                                </div>
                                <table id="task-table" class="table table-striped table-bordered table-hover">
                                    <thead>
                                    <tr>
                                        <th>İsim</th>
                                        <th>Tanım</th>
                                        <th>Kategori</th>
                                        <th>Fiyat</th>
                                        <th>Düzenle</th>
                                        <th>Sil</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (Product pro in Model)
                                    {

                                        <tr>
                                            <td>@pro.name</td>
                                            <td>@pro.caption</td>
                                            <td>@pro.Category.categoryName</td>
                                            <td>@pro.price</td>
                                            <td><a href="/AdminPanel/product/productUpdate/@pro.id " class="btn btn-warning"><i class="fa fa-refresh"></i></a></td>
                                            <td><a href="/AdminPanel/product/productDelete/@pro.id" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
                                        </tr>

                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div>

