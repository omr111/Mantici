@using System.Diagnostics
@using Mantici.Entities.Models
@model List<Mantici.Entities.Models.Branch>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_adminLayout.cshtml";
}

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Şube/Bayii Listesi</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>İsim</th>
                                    <th>Bölge</th>
                                    <th>Adres</th>
                                    <th>Telefonlar</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Branch branch in Model)
                                {

                                    <tr>
                                        <td>@branch.BranchName</td>
                                        <td>@branch.area</td>
                                       
                                        <td>@branch.BranchAdress</td>
                                        <td>
                                            @if (branch.BranchPhones.Count == 0)
                                            {

                                                <small style="font-size: 10px;color:#e74c3c">Telefon Numarası Eklenmemiş.</small>
                                            }
                                            else
                                            {
                                                <select name="BranchPhone1">
                                                    <option></option>
                                                
                                                    @foreach (var branchPhone in branch.BranchPhones)
                                                    {
                                                        
                                               
                                                        <option value="@branchPhone.id">@branchPhone.BranchPhone1</option>
                                                

                                                    }
                                                </select>
                                                   
                                            }
                                         
                                                        
                                                    
                                             
                                        </td>
                                        <td><a href="/AdminPanel/Branches/BranchUpdate/@branch.id " class="btn btn-warning"><i class="fa fa-refresh"></i></a></td>
                                        <td><a href="/AdminPanel/Branches/BranchDelete/@branch.id" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div><!-- .animated -->
</div>
